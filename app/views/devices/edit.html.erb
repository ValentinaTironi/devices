<h1>Edit device</h1>

<%= form_with(model: @device) do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :mac_address %><br>
    <%= form.number_field :mac_address %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', devices_path %>
