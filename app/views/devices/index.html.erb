<div>
  <table>
    <tr>
      <th>Name</th>
      <th>Mac address</th>
      <th>Code</th>
    </tr>

    <% @devices.each do |d| %>
    <tr>
      <td><%= d.name %></td>
      <td><%= d.mac_address %></td>
      <td><%= d.code %></td>
      <td><%= link_to 'Show', device_path(d) %></td>
      <td><%= link_to 'Edit', edit_device_path(d) %></td>
      <td><%= link_to 'Destroy', device_path(d),
              method: :delete, 
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </table>
  <td><%= link_to 'New', new_device_path %></td>
</div>
