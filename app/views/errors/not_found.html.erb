<div class="col-md-6 offset-md-3 mt-4">
  <div class="card border-danger mb-3">
    <div class="card-body">
      <div class="mb-5">
        <h2 class="card-title text-center text-danger">
          Error <%= controller.status %>
        </h2>
      </div>
      <div class="mb-3">
        <p class="card-text">
          <%= controller.controller_name.capitalize + " not found" %>
        </p>
      </div>
    </div>
    <div class="card-footer bg-transparent border-danger">
      <%= button_to('back', root_path, method: :get, class: "btn btn-outline-dark") %>
    </div>
  </div>
</div>
